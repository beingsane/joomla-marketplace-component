<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.1" method="upgrade">
	<name>com_marketplace</name>
	<author>Julio Pontes</author>
	<creationDate>2013</creationDate>
	<copyright>(C) 2005 - 2013 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see	LICENSE.txt</license>
	<authorEmail></authorEmail>
	<authorUrl></authorUrl>
	<version>3.0.0</version>
	<description>COM_MARKETPLACE_XML_DESCRIPTION</description>
	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install/mysql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall/mysql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
	<media destination="com_marketplace" folder="media">
		<folder>js</folder>
	</media>
	<administration>
		<menu img="class:store">com_marketplace</menu>
		<submenu>
			<menu link="option=com_marketplace&amp;view=marketplace" view="marketplace" img="class:store-marketplace" alt="Marketplace/Marketplace">COM_MARKETPLACE_SUBMENU_MARKETPLACE</menu>
			<menu link="option=com_marketplace&amp;view=repositories" view="repositories" img="class:store-repositories" alt="Marketplace/Repositories">COM_MARKETPLACE_SUBMENU_REPOSITORIES</menu>
		</submenu>
		<files folder="admin">
			<filename>marketplace.php</filename>
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>includes</folder>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>views</folder>
		</files>
		<languages folder="admin">
			<language tag="en-GB">language/en-GB/en-GB.com_marketplace.ini</language>
			<language tag="en-GB">language/en-GB/en-GB.com_marketplace.sys.ini</language>
		</languages>
	</administration>
</extension>